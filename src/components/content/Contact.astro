---
import { Icon } from "astro-icon/components";
import ContentSection from "./ContentSection.astro";

const links = [
{
  url: "https://github.com/erickvasm",
  description: "GitHub",
  name: "GitHub",
  icon: "mdi:github"
  },
{
  url: "https://www.linkedin.com/in/erickvasquezmurillo/",
  description: "LinkedIn",
  name: "LinkedIn",
  icon: "mdi:linkedin"
  },
{
  url: "mailto:contact@erickvasm.com",
  description: "Astro's official website",
  name: "Email",
  icon: "mdi:mail"
  }
];
---

<ContentSection title="CONTACT" id="contact">
  <Fragment slot="lead">
    You can contact me <span class="text-primary">here</span>
  </Fragment>
  <section>
    <article class="flex flex-col items-center gap-4 p-6 border border-default bg-offset rounded-lg contact__card">
      <div>
        <img src="https://avatars.githubusercontent.com/u/55751600?v=4" alt="profile" />
      </div>
      <p class="text-xl font-bold text-center">Erick Vasquez</p>
      <ul class="contact__card-list flex ">
        {
          links.map((link) => (
            <li class="flex items-center justify-center">
              <a
                class="flex items-center m-3 justify-center w-16 h-16 p-4 border-2 border-current rounded-full"
                href={link.url}
                target="_blank"
              >
                <span class="sr-only">{link.description}</span>
                <Icon class="size-full" name={link.icon} />
              </a>
              <a href={link.url} target="_blank">
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </article>
  </section>
</ContentSection>

<style>
    .contact__card {
        width: 90%;
        min-width: 300px;
        max-width: 400px;
        min-height: 150px;
        height: auto;
        margin: 15px auto;
        padding: 15px;
    }

    .contact__card img {
        border-radius: 70px;
        width: 125px;
        height: 120px;
        object-fit: cover;
        box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175);
    }

    .contact__card-list {
        flex-direction: column;
        flex-wrap: wrap;
        align-content: center;
        justify-content: space-between;
        align-items: flex-start;
        list-style: none;
    }

    @media only screen and (min-width: 500px) {
        .contact__card {
            min-width: 300px;
        }
    }
</style>
