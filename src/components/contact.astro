---
import ContentSection from "~/components/content-section.astro";
import { Icon } from "astro-icon";

const links = [
  {
    url: "mailto:contact@erickvasm.com",
    description: "Astro's official website",
    name: "Email",
    icon: "mdi:mail",
  },
  {
    url: "https://www.linkedin.com/in/erickvasquezmurillo/",
    description: "Astro on Discord",
    name: "LinkedIn",
    icon: "fa-brands:linkedin",
  },
  {
    url: "https://github.com/erickvasm",
    description: "Astro on GitHub",
    name: "GitHub",
    icon: "fa-brands:github-alt",
  },
];
---

<ContentSection title="CONTACT" id="contact">
  <Fragment slot="lead">
    You can contact me <span class="text-primary">here</span>.
  </Fragment>
  <section class="">
    <article class="flex flex-col items-center gap-4 p-6 border border-default bg-offset contact__card">
      <div class="contact__card--img">
        <img src="https://i.ibb.co/qpwVN1b/profile.jpg" alt="photo"/>
      </div>
      <p class="text-xl font-extrabold text-center">Erick Vasquez Murillo</p>
      <ul class="flex contact__card--list">
        {
          links.map((link) => (
            <li class="flex intems-center justify-center items-center">
              <a
                class="flex items-center m-3 justify-center w-16 h-16 p-4 border-2 border-current rounded-full"
                href={link.url}
                target="_blank"
              >
                <span class="sr-only">{link.description}</span>
                <Icon class="h-full" name={link.icon} />
              </a>
              <a href={link.url} target="_blank">{link.name}</a>
            </li>
          ))
        }
      </ul>
    </article>
  </section>
</ContentSection>
