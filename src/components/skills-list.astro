---
import { Icon } from "astro-icon";
const { title, data, url } = Astro.props;
---

<div class="w-full max-w-3xl space-y-2 skill_card">
  <div class="relative pt-8 pb-4 border bg-offset border-default rounded-lg">
    <h3
      class="absolute top-0 px-4 py-1 text-xs tracking-tight uppercase -translate-y-1/2 border border-current rounded-full right-4 bg-default"
    >
      {title}
    </h3>
    <ul class="flex flex-wrap justify-center p-2">
      {
        data.map(({ title, icon, url }) => (
          <li class="m-7">
            <a class="flex flex-col items-center gap-2" href={url} target="_blank">
              <Icon class="h-12" name={icon} />
              <span>{title}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
 
</div>
