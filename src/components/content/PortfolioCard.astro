---
import type { CollectionEntry } from "astro:content";

export interface Props {
  site: CollectionEntry<"portfolio">;
}

const { site } = Astro.props;
const widths = 450;
const sizes = "(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw";
---

<a class="group aspect-video hover:!text-default" href={`/portfolio/${site.data.slug}`}>
  <figure class="relative w-full h-full overflow-hidden rounded-lg">
    <picture>
      <img
        class="object-cover w-full h-full transition-all duration-300 bg-cover group-hover:scale-110 group-hover:opacity-20 group-focus:scale-110 group-focus:opacity-20"
        src={site.data.image}
        width={widths}
        sizes={sizes}
        decoding="async"
        onload="this.style.backgroundImage='none'"
        alt={`A screenshot of ${site.data.title}`}
      />
    </picture>
    <figcaption class="absolute inset-0">
      <div
        class="flex flex-col items-center justify-center h-full gap-2 transition-all duration-300 opacity-0 group-hover:opacity-100 group-focus:opacity-100">
        <h3 class="text-xl font-extrabold text-center uppercase">
          {site.data.title}
        </h3>
        <p class="px-4 py-2 border border-current">{site.data.technologies}</p>
      </div>
    </figcaption>
  </figure>
</a>
