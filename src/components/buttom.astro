---
import { Icon } from "astro-icon";

const { title, icon, target ,ref } = Astro.props;
---

<div class="grid grid-cols-1">
    <a
      href={ref}
      target={target}
      class="flex items-center justify-center gap-3 px-6 py-4 border-2 border-current rounded-md"
    >
      <Icon pack="mdi" name={icon} class="h-8" />
      <span>{title}</span>
    </a>
  </div>
